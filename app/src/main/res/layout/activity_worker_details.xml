<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".WorkerDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewProfileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/download" />

        <Button
            android:id="@+id/buttonMessage"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewProfileImage"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="79dp"
            android:layout_marginTop="20dp"
            android:text="Message" />

        <TextView
            android:id="@+id/textViewFullNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonMessage"
            android:layout_margin="5dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="TextView" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textViewTotalLitresCollected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"
        android:text="Total Litres Collected"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textViewTotalCowsMilked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"
        android:text="Total Cows Milked"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/buttonShow"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:text="See All Collected Data" />

</LinearLayout>